<CascadingValue Value=false Name="UsePopoverProvider">
    <MudThemeProvider @bind-IsDarkMode="@IsDarkMode" Theme="MyTheme"></MudThemeProvider>
</CascadingValue>

@code {
    [Parameter] public bool IsDarkMode { get; set; }

    public static MudTheme MyTheme => new()
        {
            PaletteLight = new PaletteLight()
            {
                Primary = Colors.BlueGray.Default,
                Secondary = Colors.DeepPurple.Accent2,
                Background = Colors.Gray.Lighten5,
                AppbarBackground = Colors.BlueGray.Default,
                DrawerBackground = Colors.BlueGray.Lighten1, // "#FFF",
                DrawerText = "#FFF", //"rgba(0,0,0, 0.7)",
                DrawerIcon = "#FFF",
                Success = Colors.Green.Darken3,

                ActionDefault = Colors.BlueGray.Darken1,
                ActionDisabled = Colors.BlueGray.Lighten2,
                ActionDisabledBackground = Colors.BlueGray.Lighten4,

            },
            PaletteDark = new PaletteDark()
            {
                Primary = Colors.BlueGray.Darken1,
                Secondary = Colors.DeepPurple.Darken2,
                Success = Colors.Teal.Darken4,
                Error = Colors.Pink.Default,

                ActionDefault = Colors.BlueGray.Darken1,
                ActionDisabled = Colors.BlueGray.Lighten2,
                ActionDisabledBackground = Colors.BlueGray.Default,
            },

        };
}